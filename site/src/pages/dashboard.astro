---
const kpis = [
  { label: "Active members", value: "3,482", delta: "+6.2%" },
  { label: "Weekly retention", value: "41%", delta: "+2.1%" },
  { label: "Conversions", value: "128", delta: "+9.4%" },
  { label: "Revenue", value: "$7,940", delta: "+4.8%" },
];

const series = [
  { day: "Mon", v: 120 },
  { day: "Tue", v: 150 },
  { day: "Wed", v: 90 },
  { day: "Thu", v: 180 },
  { day: "Fri", v: 210 },
  { day: "Sat", v: 160 },
  { day: "Sun", v: 190 },
];

const maxV = Math.max(...series.map((s) => s.v));
const width = 640;
const height = 180;
const pad = 16;
const step = (width - pad * 2) / (series.length - 1);
const points = series
  .map((s, i) => {
    const x = pad + i * step;
    const y = pad + (1 - s.v / maxV) * (height - pad * 2);
    return `${x},${y}`;
  })
  .join(" ");
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Dashboard — Dashboard Template</title>
  </head>
  <body class="min-h-screen bg-zinc-950 text-zinc-100">
    <main class="mx-auto max-w-5xl px-6 py-10">
      <div class="flex items-start justify-between gap-6">
        <div>
          <h1 class="text-3xl font-semibold tracking-tight">Dashboard template</h1>
          <p class="mt-2 text-zinc-300 max-w-2xl">
            A clean, no-auth dashboard layout you can rapidly adapt for any niche.
            Swap the KPIs, data model, and labels — ship a prototype fast.
          </p>
        </div>
        <a href="/" class="rounded-lg border border-white/15 px-4 py-2 text-sm text-zinc-200 hover:bg-white/5">Home</a>
      </div>

      <section class="mt-10 grid gap-4 sm:grid-cols-2 lg:grid-cols-4">
        {kpis.map((k) => (
          <div class="rounded-2xl border border-white/10 bg-white/5 p-5">
            <div class="text-xs uppercase tracking-wider text-zinc-400">{k.label}</div>
            <div class="mt-2 text-2xl font-semibold">{k.value}</div>
            <div class="mt-1 text-sm text-emerald-300">{k.delta}</div>
          </div>
        ))}
      </section>

      <section class="mt-6 rounded-2xl border border-white/10 bg-white/5 p-6">
        <div class="flex items-center justify-between">
          <h2 class="text-lg font-semibold">Weekly signal</h2>
          <div class="text-xs text-zinc-400">Example time series</div>
        </div>
        <div class="mt-4 overflow-x-auto">
          <svg width={width} height={height} viewBox={`0 0 ${width} ${height}`} class="block">
            <polyline
              points={points}
              fill="none"
              stroke="rgba(255,255,255,0.85)"
              stroke-width="2.5"
              stroke-linecap="round"
              stroke-linejoin="round"
            />
            {series.map((s, i) => {
              const x = pad + i * step;
              const y = pad + (1 - s.v / maxV) * (height - pad * 2);
              return (
                <g>
                  <circle cx={x} cy={y} r="3.5" fill="rgba(255,255,255,0.9)" />
                  <text x={x} y={height - 4} text-anchor="middle" font-size="10" fill="rgba(255,255,255,0.55)">
                    {s.day}
                  </text>
                </g>
              );
            })}
          </svg>
        </div>
      </section>

      <section class="mt-6 grid gap-6 lg:grid-cols-2">
        <div class="rounded-2xl border border-white/10 bg-white/5 p-6">
          <h3 class="font-semibold">Integrations</h3>
          <p class="mt-2 text-sm text-zinc-300">
            Replace the synthetic dataset with a real adapter: Stripe, Discord, Circle, Airtable, Shopify, custom DB.
          </p>
        </div>
        <div class="rounded-2xl border border-white/10 bg-white/5 p-6">
          <h3 class="font-semibold">Prototype delivery</h3>
          <p class="mt-2 text-sm text-zinc-300">
            This template is designed to be shipped as a public demo (no auth) so prospects can see the concept immediately.
          </p>
        </div>
      </section>
    </main>
  </body>
</html>
